{
  "version": "2.0.0",
  "tasks": [
    {
      /**
       *  label is the name of the task
       */
      "label": "npm: serve",
      "detail": "ng serve --host 0.0.0.0 --port 4200",
      "type": "npm",
      "script": "serve",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${cwd}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            /**
             *  this is the pattern when the task is finished
             */
            "regexp": "Compiled |Failed to compile."
          }
        }
      }
    }
  ]
}
